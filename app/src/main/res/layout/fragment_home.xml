<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ActionButton" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:focusableInTouchMode="true"
                android:layout_height="0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_slide"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text2"
                        style="@style/Text"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="3dp"
                        android:drawableEnd="@drawable/ic_drop_water"
                        android:drawablePadding="7dp"
                        android:gravity="start"
                        android:text="Ваша норма потребления воды"
                        android:textColor="@color/three"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text3"
                        style="@style/Text"
                        android:layout_below="@id/text2"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="start"
                        android:text="составляет 1.4 литра, в соответсвии с расчетом 35 милилитров на 1 кллограм массы тела"
                        android:textColor="@color/three"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_slide"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text1"
                        android:textColor="@color/three"
                        style="@style/Text"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="Сегодня"
                        android:textSize="20sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/count_water"
                        android:textColor="@color/three"
                        style="@style/Text"
                        android:layout_alignBaseline="@+id/text1"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        android:layout_margin="16dp"
                        android:text="0"
                        android:textSize="25sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_more_drunk"
                        style="@style/ButtonText"
                        android:layout_below="@id/text1"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:textSize="13sp"
                        android:textColor="@color/three_60"
                        android:layout_marginBottom="0dp"
                        android:text="Открыть список"/>

<!--                    <androidx.recyclerview.widget.RecyclerView-->
<!--                        android:id="@+id/recycler_achievements"-->
<!--                        android:visibility="visible"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@+id/text1"-->
<!--                        android:layout_marginStart="10dp"-->
<!--                        android:layout_marginEnd="10dp"-->
<!--                        android:layout_marginBottom="20dp" />-->

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/more_statistic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text7"
                        style="@style/Text"
                        android:textColor="@color/three"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="5dp"
                        android:text="Детальная статистика"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/Text"
                        android:textColor="@color/three_60"
                        android:layout_below="@id/text7"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="За прошлую неделю"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_margin="16dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_slide"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/more_statistic">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text8"
                        style="@style/Text"
                        android:textColor="@color/three"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="Какую воду не следует пить"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/Text"
                        android:id="@+id/text9"
                        android:textColor="@color/three_60"
                        android:layout_below="@id/text8"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:drawablePadding="30dp"
                        android:drawableEnd="@drawable/ic_who"
                        android:gravity="start"
                        android:layout_marginBottom="0dp"
                        android:text="Безопасная и доступная \nвода — важный фактор здоровья людей, независимо от того, используется ли она для питья."
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_more"
                        style="@style/ButtonText"
                        android:layout_below="@id/text9"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/teal_200"
                        android:layout_marginBottom="0dp"
                        android:text="Посмотреть больше"/>

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>




